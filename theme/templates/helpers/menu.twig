      {% endif %}
      >
      
      <a class="underline-in font-display-black uppercase {% if loop.last %}font-normal{% else %}font-bold{% endif %}" href="{{ item.link }}">{{ item.title }}</a>
    
    </div>
  </div> #}

{% endfor %}


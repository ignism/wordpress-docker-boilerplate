{% for item in menu.items %}

  <div class="menu col" >
    <div class=""
      {% if item.children %}
      @mouseenter="eventBus.$emit('header:show-submenu', { submenu: '{{ item.slug }}'})"
      {% else %}
      @mouseenter="eventBus.$emit('header:hide-submenus')"
      {% endif %}
      >
      
      <a class="underline-in font-display-black uppercase {% if loop.last %}menu-button{% endif %}" href="{{ item.link }}" {% if isOverlay %} @click="eventBus.$emit('navoverlay:deactivate')" {% endif %}>{{ item.title }}</a>
    
    </div>
  </div>

  {# <div class="menu col {% if loop.last %}flex-grow{% else %}w-1/12{% endif %}" >
    <div class="{% if loop.last %}w-full text-right{% endif %}"
      {% if item.children %}
      @mouseenter="eventBus.$emit('header:show-submenu', { submenu: '{{ item.slug }}'})"
